<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:background="@drawable/tvlogo">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="60sp"
        android:background="@drawable/blogo1"
        android:id="@+id/tv1"
        android:layout_margin="10dp"
        android:layout_weight="1"
        >
    </TextView>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:gravity="center"
            android:layout_weight=".3"
            >
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+/-"
                android:textSize="25sp"
                android:background="@drawable/blogo1"
                android:textColor="@color/black"
                android:layout_margin="5dp"
                android:scaleY="1.5"
                android:id="@+id/ne"
                android:layout_weight="1"
                >
            </Button>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="%"
                android:textSize="25sp"
                android:background="@drawable/blogo1"
                android:textColor="@color/black"
               android:layout_margin="5dp"
                android:scaleY="1.5"
                android:id="@+id/per"
                android:layout_weight="1"
                >
            </Button>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="B"
                android:textSize="25sp"
                android:background="@drawable/blogo1"
                android:textColor="@color/black"
                android:layout_margin="5dp"
                android:scaleY="1.5"
                android:id="@+id/back"
                android:layout_weight="1"
                >
            </Button>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CE"
                android:textSize="25sp"
                android:background="@drawable/blogo1"
                android:textColor="@color/black"
                android:layout_margin="5dp"
                android:scaleY="1.5"
                android:id="@+id/clear"
                android:layout_weight="1"
                >
            </Button>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:gravity="center"
            android:layout_weight=".3"
            >
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="7"
                android:textSize="25sp"
                android:background="@drawable/blogo1"
                android:textColor="@color/black"
                android:layout_margin="5dp"
                android:scaleY="1.5"
                android:id="@+id/seven"
                android:layout_weight="1"
                >
            </Button>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="8"
                android:textSize="25sp"
                android:background="@drawable/blogo1"
                android:textColor="@color/black"
                android:layout_margin="5dp"
                android:scaleY="1.5"
                android:id="@+id/eight"
                android:layout_weight="1"
                >
            </Button>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="9"
                android:textSize="25sp"
                android:background="@drawable/blogo1"
                android:textColor="@color/black"
                android:layout_margin="5dp"
                android:scaleY="1.5"
                android:id="@+id/nine"
                android:layout_weight="1"
                >
            </Button>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="/"
                android:textStyle="bold"
                android:textSize="25sp"
                android:background="@drawable/blogo1"
                android:textColor="@color/black"
                android:layout_margin="5dp"
                android:scaleY="1.5"
                android:id="@+id/div"
                android:layout_weight="1"
                >
            </Button>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:gravity="center"
            android:layout_weight=".3"
            >
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4"
                android:textSize="25sp"
                android:background="@drawable/blogo1"
                android:textColor="@color/black"
                android:layout_margin="5dp"
                android:scaleY="1.5"
                android:id="@+id/four"
                android:layout_weight="1"
                >
            </Button>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5"
                android:textSize="25sp"
                android:background="@drawable/blogo1"
                android:textColor="@color/black"
                android:layout_margin="5dp"
                android:scaleY="1.5"
                android:id="@+id/five"
                android:layout_weight="1"
                >
            </Button>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="6"
                android:textSize="25sp"
                android:background="@drawable/blogo1"
                android:textColor="@color/black"
                android:layout_margin="5dp"
                android:scaleY="1.5"
                android:id="@+id/six"
                android:layout_weight="1"
                >
            </Button>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="*"
                android:textSize="25sp"
                android:background="@drawable/blogo1"
                android:textColor="@color/black"
                android:layout_margin="5dp"
                android:scaleY="1.5"
                android:id="@+id/mul"
                android:layout_weight="1"
                >
            </Button>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:gravity="center"
            android:layout_weight=".3"
            >
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:textSize="25sp"
                android:background="@drawable/blogo1"
                android:textColor="@color/black"
                android:layout_margin="5dp"
                android:scaleY="1.5"
                android:id="@+id/one"
                android:layout_weight="1"
                >
            </Button>
            <Button

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2"
                android:textSize="25sp"
                android:background="@drawable/blogo1"
                android:textColor="@color/black"
                android:layout_margin="5dp"
                android:scaleY="1.5"
                android:id="@+id/two"
                android:layout_weight="1"

                >
            </Button>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3"
                android:textSize="25sp"
                android:background="@drawable/blogo1"
                android:textColor="@color/black"
                android:layout_margin="5dp"
                android:scaleY="1.5"
                android:id="@+id/three"
                android:layout_weight="1"
                >
            </Button>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-"
                android:textSize="25sp"
                android:background="@drawable/blogo1"
                android:textColor="@color/black"
                android:layout_margin="5dp"
                android:scaleY="1.5"
                android:id="@+id/sub"
                android:layout_weight="1"
                >
            </Button>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:gravity="center"
            android:layout_weight=".3"
            >
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="."
                android:textSize="55sp"
                android:background="@drawable/blogo1"
                android:textColor="@color/black"
                android:layout_margin="5dp"
                android:id="@+id/dot"
                android:layout_weight="1"
                >
            </Button>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="25sp"
                android:background="@drawable/blogo1"
                android:textColor="@color/black"
                android:layout_margin="5dp"
                android:scaleY="1.5"
                android:id="@+id/zero"
                android:layout_weight="1"
                >
            </Button>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+"
                android:textSize="25sp"
                android:background="@drawable/blogo1"
                android:textColor="@color/black"
                android:layout_margin="5dp"
                android:scaleY="1.5"
                android:id="@+id/plus"
                android:layout_weight="1"
                >
            </Button>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="="
                android:textSize="55sp"
                android:background="@drawable/blogo1"
                android:textColor="@color/black"
                android:layout_margin="5dp"
                android:id="@+id/equal"
                android:layout_weight="1"
                >
            </Button>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>